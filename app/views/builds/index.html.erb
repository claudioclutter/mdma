<% content_for(:refresh) { refresh_button_to 'Enqueue pending', enqueues_path } %>
<table class="table table-sm">
  <thead>
    <tr>
      <th>Version</th>
      <th>Deploy</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @builds.each do |build| %>
      <tr class="table-default">
        <td><%= build.version %></td>
        <td>
          on <%= l build.deploy_at.in_time_zone, format: :verbose %>
        </td>
        <% if build.manifest.attached? %>
        <td><%= link_to 'Install', manifest_url(build.manifest) %></td>
        <% else %>
        <td><%= link_to 'Download', rails_blob_url(build.package, disposition: 'attachment') %></td>
        <% end %>
      </tr>
      <% build.deploys.each do |deploy| %>
        <tr class="<%= table_class_for(deploy) %>">
          <td></td>
          <td>
            after <%= pluralize deploy.timeslot.delay_in_hours, 'hour' %>
            for <%= prefixes_for deploy.timeslot %> devices
          </td>
          <td><%= deploy.status %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
